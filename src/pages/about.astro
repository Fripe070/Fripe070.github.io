<style type="scss">
	a {
		all: unset;
		cursor: pointer;
		text-decoration: underline var(--text-muted) 1px;
	}
	.redacted {
		background: var(--text-normal);
	}
	.hidden {
		display: none;
	}
	.emoji {
		display: inline-block;
		width: var(--line-height);
		height: var(--line-height);
		vertical-align: bottom;
	}
</style>
